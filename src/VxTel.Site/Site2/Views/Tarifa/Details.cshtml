@model VxTel.Site.Domain.DTO.TarifaDTO

<div>
    <div class="row">
        <h2>Details</h2>
    </div>

    <div class="row">
        <div class="table-responsive-sm col-md-8">
            <fieldset>
                <legend>Tarifa</legend>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Id" class="col-form-label"></label>
                    <input asp-for="Id" type="text" class="form-control" placeholder="" readonly="" />
                </div>

                <div class="form-group">
                    <label asp-for="DddOrigem" class="col-form-label"></label>
                    <input asp-for="DddOrigem" type="text" class="form-control" placeholder="" readonly="" />
                </div>

                <div class="form-group">
                    <label asp-for="DddDestino" class="col-form-label"></label>
                    <input asp-for="DddDestino" type="text" class="form-control" placeholder="" readonly="" />
                </div>

                <div>
                    <div class="form-group">
                        <label asp-for="Valor" class="col-form-label"></label>
                    </div>
                    <div class="btn-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Valor" type="text" class="form-control" readonly=""
                               maxlength="11" onkeypress="$(this).mask('##0.00', {reverse: true});" />
                    </div>
                </div>

                <div class="form-group mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-light">Back to List</a>
                </div>

            </fieldset>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model VxTel.Site.Domain.DTO.ClienteDTO

<div>
	<div class="row">
		<h2>Create</h2>
	</div>

	<div class="row">
		<div class="table-responsive-sm">
			<form asp-action="Create">
				<fieldset>
					<legend>Cliente</legend>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="Nome" class="col-form-label"></label>
						<input asp-for="Nome" type="text" class="form-control" placeholder="" />
						<span asp-validation-for="Nome" class="text-danger"></span>
					</div>

					<div class="form-group col-3">
                        <label asp-for="Documento" class="col-form-label"></label>
                        <input asp-for="Documento" type="text" class="form-control text-center"
                                onkeypress="mask(this, maskCpfCnpj)" onpaste="mask(this, maskCpfCnpj)"
                                onkeyup="mask(this, maskCpfCnpj)" onblur="mask(this, maskCpfCnpj)" />
                        <span asp-validation-for="Documento" class="text-danger"></span>
                    </div>
					
					<div class="form-group col-2">
                        <label asp-for="Ddd" class="col-form-label"></label>
                        <input asp-for="Ddd" type="text" class="form-control text-center" placeholder="000"
                                   maxlength="3" onkeypress="$(this).mask('000', {reverse: true});" />
                        <span asp-validation-for="Ddd" class="text-danger"></span>
                    </div>

					<div class="form-group col-2">
                        <label asp-for="Telefone" class="col-form-label"></label>
                        <input asp-for="Telefone" type="text" class="form-control text-center" placeholder="00000000"
                                   maxlength="9" onkeypress="$(this).mask('#00000000', {reverse: true});" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

					<div class="form-group mt-4">
						<input type="submit" asp-action="Create" class="btn btn-primary" value="Save" />
						<a asp-action="Index" class="btn btn-light">Back to List</a>
					</div>

				</fieldset>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
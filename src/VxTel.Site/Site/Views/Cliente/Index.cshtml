@model IEnumerable<VxTel.Site.Domain.DTO.ClienteDTO>

<div>
    <div class="row">
        <h2>Cliente</h2>
    </div>

    <div>
        <a asp-action="Create" class="btn btn-primary pull-left h2">Create New</a>
    </div>

    <div class="mt-4">
        <table class="table table-hover" cellspacing="0" cellpadding="0">
            <thead>
                <tr class="table-success">
                    <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Documento)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Ddd)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th scope="col" class="actions"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ddd)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td class="actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
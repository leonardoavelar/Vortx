@model VxTel.Site.Domain.DTO.TarifaDTO

<div>
	<div class="row">
		<h2>Create</h2>
	</div>

	<div class="row">
		<div class="table-responsive-sm col-8">
			<form asp-action="Create">
				<fieldset>
					<legend>Tarifa</legend>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group col-2">
						<label asp-for="DddOrigem" class="col-form-label"></label>
						<input asp-for="DddOrigem" type="text" class="form-control text-center" placeholder="000"
							   maxlength="3" onkeypress="$(this).mask('000', {reverse: true});" />
						<span asp-validation-for="DddOrigem" class="text-danger"></span>
					</div>

					<div class="form-group col-2">
						<label asp-for="DddDestino" class="col-form-label"></label>
						<input asp-for="DddDestino" type="text" class="form-control text-center" placeholder="000"
							   maxlength="3" onkeypress="$(this).mask('000', {reverse: true});" />
						<span asp-validation-for="DddDestino" class="text-danger"></span>
					</div>

					<div class="form-group col-3">
						<div class="form-group">
							<label asp-for="Valor" class="col-form-label"></label>
						</div>
						<div class="btn-group">
							<span class="input-group-text">$</span>
							<input asp-for="Valor" type="text" class="form-control text-center"
								   maxlength="11" onkeypress="$(this).mask('##0.00', {reverse: true});" />
						</div>
						<div class="form-group">
							<span asp-validation-for="Valor" class="text-danger"></span>
						</div>
					</div>

					<div class="form-group mt-4">
						<input type="submit" asp-action="Create" class="btn btn-primary" value="Save" />
						<a asp-action="Index" class="btn btn-light">Back to List</a>
					</div>

				</fieldset>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
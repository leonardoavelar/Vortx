<div>
	<div class="row">
		<h2>Details</h2>
	</div>

	<div class="row">
		<div class="table-responsive-sm col-8">
			<fieldset>
				<legend>Tarifa</legend>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group col-2">
					<label asp-for="Id" class="col-form-label"></label>
					<input asp-for="Id" type="text" class="form-control text-center" placeholder="" readonly="" />
				</div>

				<div class="form-group col-2">
